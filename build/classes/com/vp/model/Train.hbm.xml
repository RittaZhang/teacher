<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
   <class name="com.vp.model.Train" table="TRAIN">
		<id name="id" type="int">
			<generator class="native"/>  <!-- 自增长 -->
		</id>
		<property name="teacher_id" type="int"></property>
		<property name="type" type="java.lang.String"></property>
		<property name="hostunit" type="java.lang.String"></property>
		<property name="way" type="java.lang.String"></property>
		<property name="place" type="java.lang.String"></property>
		<property name="startdate" type="date"></property>
		<property name="enddate" type="date"></property>
		<property name="result" type="java.lang.String"></property>
		<property name="remarks" type="java.lang.String"></property>
	</class>
</hibernate-mapping>