<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.vp.model.Bonuspenalty" table="BONUSPENALTY">
		<id name="id" type="int">
			<generator class="native"/>  <!-- 自增长 -->
		</id>
		<property name="bpflag" type="java.lang.Boolean"></property>
		<property name="bpcontent" type="java.lang.String"></property>
		<property name="teacher_id" type="int"></property>
		<property name="remarks" type="java.lang.String"></property>
	</class>
</hibernate-mapping>